<link rel="stylesheet" href="/styles.css" />

<div class="container">
  <h2>Admin Dashboard</h2>

  <div id="tasks">Loading tasks...</div>
  <div class="nav">
    <button
      onclick="logout()"
      style="
        background: #dc3545;
        padding: 10px;
        color: white;
        border: none;
        border-radius: 5px;
        margin-bottom: 15px;
        cursor: pointer;
      "
    >
      Logout
    </button>
  </div>
</div>

<script>
  const token = sessionStorage.getItem("token");
  if (!token) {
    window.location = "/";
  }
  
  async function loadTasks() {
    const res = await fetch("/dashboard/admin", {
      method: "GET",
      headers: {
        Authorization: "Bearer " + token,
        "Content-Type": "application/json",
      },
    });

    const data = await res.json();

    if (data.tasks) {
      document.getElementById("tasks").innerHTML = data.tasks
        .map(
          (t) =>
            `<p><strong>${t.title}</strong> â€” ${t.description} (User: ${t.userId.email})</p>`
        )
        .join("");
    } else {
      document.getElementById("tasks").innerHTML = "<p>No tasks found.</p>";
    }
  }

  loadTasks();

  function logout() {
    sessionStorage.removeItem("token");
    sessionStorage.removeItem("role");
    window.location = "/";
  }
</script>

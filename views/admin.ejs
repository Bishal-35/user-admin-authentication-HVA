<link rel="stylesheet" href="/styles.css" />

<div class="container">
  <h2>Admin Dashboard</h2>

  <div id="tasks">Loading tasks...</div>

  <div class="nav">
    <button
      onclick="logout()"
      style="
        background: #dc3545;
        padding: 10px;
        color: white;
        border: none;
        border-radius: 5px;
        margin-bottom: 15px;
        cursor: pointer;
      "
    >
      Logout
    </button>
  </div>
</div>

<script>
  async function loadTasks() {
    const res = await fetch("/dashboard/admin");

    if (res.status === 401 || res.status === 403) {
      window.location = "/";
      return;
    }

    const data = await res.json();

    if (data.tasks && data.tasks.length > 0) {
      document.getElementById("tasks").innerHTML = data.tasks
        .map(
          (t) =>
            `<p><strong>${t.title}</strong> â€” ${t.description} (User: ${t.userId.email})</p>`
        )
        .join("");
    } else {
      document.getElementById("tasks").innerHTML = "<p>No tasks found.</p>";
    }
  }

  loadTasks();

  function logout() {
    window.location = "/auth/logout";
  }
</script>
